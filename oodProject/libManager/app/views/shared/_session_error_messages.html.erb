<% if @user && @user.errors.any? %>
    <div id="error_expl">
      <div class="alert alert-error">
        <b>The form contains <%= pluralize(@user.errors.count, "error") %>.</b>
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li>*<%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>