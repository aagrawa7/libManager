
<div class = "hpTopBar">
  <h1 class = "hpHeader">the librarian</h1>
  <%= link_to "Sign out", signout_path, method: "delete", class: "userOptions" %>
</div>

<% flash.each do |key, value| %>
    <div class="flash alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class = "hpBody">
  <%= yield %>
  <h2 class = "userName">Welcome <%= @user.name %></h2>
  <%= link_to "check out books", '/books', :method => :get, class:  "ghost-button"%>
</div>


