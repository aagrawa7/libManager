<p id="notice"><%= notice %></p>

<h1>List of all Books in the Library</h1>

<table cellspacing="10"> 
<table cellpadding="10">
  <thead>
    <tr>
      <th>Isbn</th>
      <th colspan="1"></th>  
      <th>Title</th>
      <th colspan="1"></th> 
      <th>Authors</th>
      <th colspan="1"></th>
      <th>Description</th>
      <th colspan="1"></th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.ISBN %></td>
        <td colspan="1"></td>
        <td><%= book.Title %></td>
        <td colspan="1"></td>   
        <td><%= book.Authors %></td>
        <td colspan="1"></td> 
        <td><%= book.Description %></td>
        <td colspan="1"></td>
        <td><%= 'available' if book.Status == false %></td>
         <td colspan="1"></td> 
         <td colspan="1"></td>
        <td colspan="1"></td>
         </tr>
    <% end %>
  </tbody>
</table>

<br>


